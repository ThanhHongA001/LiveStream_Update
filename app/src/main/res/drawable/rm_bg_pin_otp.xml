<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- PinEntryEditText has error set -->
    <item android:state_active="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="6dp" />
            <solid android:color="#E7E8EA" />
        </shape>
    </item>
    <!-- Space contains text -->
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/v5_main_color" />
            <corners android:radius="6dp" />
            <solid android:color="@color/v5_main_color" />
        </shape>
    </item>
    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/v5_main_color" />
            <corners android:radius="6dp" />
            <solid android:color="@color/v5_background_default" />
        </shape>
    </item>
    <!--Space contains text and not focused -->
    <item android:state_checked="true" android:state_focused="false">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/v5_main_color" />
            <corners android:radius="6dp" />
            <solid android:color="@color/v5_background_default" />
        </shape>
    </item>
    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/v5_pin_entry" />
            <corners android:radius="6dp" />
            <solid android:color="@color/v5_pin_entry" />
        </shape>
    </item>
    <!-- PinEntryEditText is not focused -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/v5_pin_entry" />
        </shape>
    </item>

</selector>