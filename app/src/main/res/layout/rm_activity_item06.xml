<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/rm_activity_item06_ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rm_activity_item06_iv_01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rm_ic_home_invite"/>

        <LinearLayout
            android:id="@+id/rm_activity_item06_ll_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rm_activity_item06_tv_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/rm_activity_item06_tv_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="5dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typeset..."
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/rm_activity_item06_ll_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rm_activity_item06_iv_02"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/rm_ic_home_invite"/>

                <TextView
                    android:id="@+id/rm_activity_item06_tv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:text="KAKOAK"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/rm_activity_item06_iv_03"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/rm_ic_home_invite"/>

                <TextView
                    android:id="@+id/rm_activity_item06_tv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:text="4h ago"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
