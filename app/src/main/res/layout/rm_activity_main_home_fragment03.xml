<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rm_fragment_activity_main_home_03_fl_01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/rm_fragment_activity_main_home_03_ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rm_fragment_activity_main_home_03_ll_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/rm_fragment_activity_main_home_03_ifv_01"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rm_ic_home_item03"/>

            <TextView
                android:id="@+id/rm_fragment_activity_main_home_03_tv_01"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Just For You Packs!"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rm_fragment_activity_main_home_03_btn_01"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@color/white_transparent"
                android:text="See all"
                android:textColor="@color/rm_livestream_button01"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rm_fragment_activity_main_home_03_rv_01"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
