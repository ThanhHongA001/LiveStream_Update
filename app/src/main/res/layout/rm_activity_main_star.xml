<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rm_activity_main_star_main_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_50"
    tools:context=".LiveStream.MainActivity_Star.MainActivity_Star">

    <LinearLayout
        android:id="@+id/rm_activity_main_star_ln_main_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_50"
        tools:context=".LiveStream.MainActivity_Star.MainActivity_Star">

        <LinearLayout
            android:id="@+id/rm_activity_main_star_layout_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/rm_activity_main_star_iv_03"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/rm_ic_arrow_back_dialog" />

            <TextView
                android:id="@+id/rm_activity_main_star_tv_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="List LiveStream"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rm_activity_main_star_layout_07"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/rm_backgroup_star"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rm_activity_main_star_constraint_08"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/rm_activity_main_star_tv_09"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your current star count"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/rm_activity_main_star_iv_10"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:background="@drawable/rm_ic_star_coin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rm_activity_main_star_tv_09"/>

                <TextView
                    android:id="@+id/rm_activity_main_star_tv_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="30"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/rm_activity_main_star_iv_10"
                    app:layout_constraintTop_toBottomOf="@+id/rm_activity_main_star_tv_09" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rm_activity_main_star_btn_12"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Top Up"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:background="@drawable/rm_bg_button_topup"
                android:layout_margin="15dp"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/rm_activity_main_star_framelayout_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rm_activity_main_star_ln_main_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

