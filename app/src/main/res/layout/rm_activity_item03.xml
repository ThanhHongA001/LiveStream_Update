<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/rm_activity_item03_cv_01"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:background="@drawable/rm_bg_backgroup_packs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/rm_activity_item03_ll_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rm_activity_item03_ll_02"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rm_backgroup_packs">

                <TextView
                    android:id="@+id/rm_activity_item03_tv_01"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 888"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/rm_activity_item03_tv_02"
                    android:layout_weight="9"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/rm_activity_item03_tv_03"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="SH123"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rm_activity_item03_ll_03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/rm_bg_backgroup_packs">

                <TextView
                    android:id="@+id/rm_activity_item03_tv_04"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="429 MB and 428 On-net SMS, only $ 200"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/rm_livestream_button01"/>

                <TextView
                    android:id="@+id/rm_activity_item03_tv_05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="Validity: 30 Days "
                    android:textSize="15sp"/>

                <LinearLayout
                    android:id="@+id/rm_activity_item03_ll_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_transparent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/rm_activity_item03_btn_01"
                        android:layout_width="110dp"
                        android:layout_height="42dp"
                        android:background="@drawable/rm_backgroup_button_detail"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/rm_activity_item03_btn_02"
                        android:layout_width="110dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/rm_backgroup_button_buy"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
