<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black_50"
    tools:context=".MainActivity_Video_LiveStream.MainActivity_Video_LiveStream"
    android:orientation="vertical">

    <!-- Thanh trên cùng chứa nút quay lại -->
    <LinearLayout
        android:id="@+id/rm_activity_main_all_live_stream_ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/rm_activity_main_all_live_stream_iv_01"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/rm_ic_arrow_back_dialog" />

    </LinearLayout>

    <!-- Layout chính hiển thị ảnh và các icon -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rm_activity_main_all_live_stream_cl_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rm_activity_main_all_live_stream_iv_02"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rm_error"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rm_activity_main_all_live_stream_iv_03"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rm_ic_v5_om_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/rm_activity_main_all_live_stream_pb_01"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/rm_activity_main_all_live_stream_fragment01_ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/rm_activity_main_all_live_stream_fragment01_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_transparent"
            android:text="FLYING OVER CAPRI ITALY(4K HD)"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/rm_activity_main_all_live_stream_fragment01_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typeset Lorem Ipsum is simply dummy dummy...See more"
            android:textColor="@color/black"
            android:background="@color/white_transparent"/>

        <LinearLayout
            android:id="@+id/rm_activity_main_all_live_stream_fragment01_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_transparent"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/rm_activity_main_all_live_stream_fragment01_user_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/rm_ic_home_invite"/>

            <TextView
                android:id="@+id/rm_activity_main_all_live_stream_fragment01_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Alext Sun"
                android:layout_gravity="center"
                android:layout_weight="9"/>

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/rm_activity_main_all_live_stream_fragment01_follow_button"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="@drawable/rm_ic_button_follow"
                android:layout_gravity="center"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rm_activity_main_all_live_stream_fragment01_interaction_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white_transparent">

            <ImageView
                android:id="@+id/rm_activity_main_all_live_stream_fragment01_like_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/rm_ic_onmedia_like"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rm_activity_main_all_live_stream_fragment01_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="367 Live"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rm_activity_main_all_live_stream_fragment01_like_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/rm_activity_main_all_live_stream_fragment01_comment_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/rm_ic_onmedia_comment"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rm_activity_main_all_live_stream_fragment01_comment_count"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rm_activity_main_all_live_stream_fragment01_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxx Comment"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- Danh sách livestream -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rm_activity_main_all_live_stream_rv_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/rm_activity_item06"/>

</LinearLayout>
